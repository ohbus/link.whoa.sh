<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="002-create-url-analytics-table" author="whoa-app">
        <createTable tableName="url_analytics">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_url_analytics_urls" references="urls(id)"/>
            </column>
            <column name="created_at" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_agent" type="text"/>
            <column name="ip_address" type="varchar(50)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
